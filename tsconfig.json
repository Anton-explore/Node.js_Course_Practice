{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "build",
    "rootDir": "src",
    "lib": ["es6"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
